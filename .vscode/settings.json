{
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.shellIntegration.decorationsEnabled":"gutter",
    "python.formatting.provider": "black",
    "[python]": {
        "editor.formatOnPaste": false,
        "editor.formatOnSaveMode": "file",
        "editor.formatOnSave": true
    },
    "python.defaultInterpreterPath": "${workspaceRoot}/.venv/bin/python",
    "autoDocstring.docstringFormat": "google",
    "workbench.colorCustomizations": {
        "[Monokai]": {
            "titleBar.activeBackground": "#196c09"
        },
        "[Default Dark+]": {
            "titleBar.activeBackground": "#196c09"
        },
        "[Visual Studio Dark]": {
            "titleBar.activeBackground": "#196c09",
            "titleBar.activeForeground": "#77f5ac"
        }
    },
    "workbench.colorTheme": "Monokai",
    "esbonio.sphinx.confDir": "",
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "spellchecker.ignoreWordsList": ["LibreOffice"],
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        "**/build": true,
        "**/.venv": true,
        "**/tmp": true,
        "**/.pytest_cache": true,
        "**/.idea": true,
        "**/__pycache__": true,
        "**/.tox": true,
        "**/dist": true
    }
}